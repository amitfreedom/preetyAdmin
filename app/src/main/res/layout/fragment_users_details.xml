<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.users.UsersDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivUserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>

            <View
                android:layout_alignBottom="@id/ivUserImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/shadow_color"
                />

            <LinearLayout
                android:padding="20dp"
                android:layout_alignBottom="@id/ivUserImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginVertical="5dp"
                    style="@style/MediumTextView"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvUid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:1000"
                    style="@style/NormalTextView"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:padding="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Coins"
                style="@style/MediumTextView"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tvTotalCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/gray"
                style="@style/MediumTextView"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received Coins"
                style="@style/MediumTextView"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tvReceivedCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128"
                android:textColor="@color/gray"
                style="@style/MediumTextView"/>

        </RelativeLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>