<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.host.fragments.RequestDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMainImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

        <View
            android:layout_alignBottom="@id/ivMainImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shadow_color"
            />

        <LinearLayout
            android:padding="20dp"
            android:layout_alignBottom="@id/ivMainImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginVertical="5dp"
                style="@style/MediumTextView"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:1000"
                style="@style/NormalTextView"
                android:textColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agency Code"
                style="@style/MediumTextView"/>

            <TextView
                android:id="@+id/tvAgency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="009"
                android:textColor="@color/gray"
                style="@style/MediumTextView"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                style="@style/MediumTextView"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXX09"
                android:textColor="@color/gray"
                style="@style/MediumTextView"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document Type"
                style="@style/MediumTextView"/>

            <TextView
                android:id="@+id/tvDocType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/gray"
                style="@style/MediumTextView"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Number"
                style="@style/MediumTextView"/>

            <TextView
                android:id="@+id/tvIdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXX09"
                android:textColor="@color/gray"
                style="@style/MediumTextView"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document Image"
            style="@style/MediumTextView"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDocImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitCenter"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnView"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:backgroundTint="#F44336"
                android:text="Reject"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#009688"
                android:text="Accept"/>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>